<div class="row mt-3">
    <div class="col-md-6 mx-auto">
        <div class="card p-2">
            <div class="card-header">
                <span style="text-align: center;">
                    <h4>Nueva canción</h4>
                </span>
            </div>
            <div class="card-body">
                <form action="/songs/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group mb-4">
                        <input type="text" name="title" class="form-control" placeholder="Título" required>
                    </div>
                    <div class="form-group mb-4">
                        <input type="text" name="artist" class="form-control" placeholder="Artista" required>
                    </div>
                    <div class="form-group mb-4">
                        <input type="text" name="album" class="form-control" placeholder="Álbum" required>
                    </div>
                    <div class="input-group mb-4">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01" required>
                            <label for="inputGroupFile01" class="custom-file-label"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary form-control">
                            Guardar canción
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>